            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.968" android:textSize="30sp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="620dp" android:layout_marginTop="16dp"
